{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "isolatedModules": false,
    "pretty": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "..",
    "paths": {
      "~/*": ["./.storybook/*"],
      "~/lib": ["./dist"],
      "~/icons": ["./icons"],
    },
    "types": ["node"],
    "noEmit": true,
    "rootDir": ".."
  },
  "include": ["./**/*"]
}
