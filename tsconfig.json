{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "isolatedModules": false,
    "pretty": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["node"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "typedocOptions": {
    "entryPoints": ["src/components", "src/config"],
    "plugin": "typedoc-plugin-markdown",
    "out": "docs",
    "readme": "none"
  }
}
