{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "isolatedModules": false,
    "pretty": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/storybook": ["./.storybook"],
      "@appello/mobile-ui": ["./src"],
      "@appello/mobile-ui/*": ["./src/*"],
      "@appello/mobile-ui/icons/*": ["./icons/*"],
      "@appello/mobile-ui/.storybook": ["./.storybook"],
      "@appello/mobile-ui/.storybook/*": ["./.storybook/*"]
    },
    "types": ["node"],
    "declaration": true,
    "noEmit": false,
    "rootDir": "."
  },
  "include": ["src/**/*", "example/src/**/*", "example/scripts/**/*", "example/*.config.ts"]
}
