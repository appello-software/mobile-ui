{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "isolatedModules": false,
    "pretty": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@appello/mobile-ui/icons/*": ["./icons/*"]
    },
    "types": ["node"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["src/**/*", ".storybook/**/*"]
}
