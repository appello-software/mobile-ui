{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "isolatedModules": false,
    "pretty": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@appello/mobile-ui": ["./src"],
      "@appello/mobile-ui/*": ["./src/*"],
      "@appello/mobile-ui/icons/*": ["./icons/*"],
      "@appello/mobile-ui/.storybook": ["./.storybook"],
      "@appello/mobile-ui/.storybook/*": ["./.storybook/*"]
    },
    "types": ["node"],
    "declaration": true,
    "noEmit": true,
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    ".storybook/**/*",
    "example/src/**/*",
    "example/scripts/**/*",
    "example/*.config.ts"
  ]
}
